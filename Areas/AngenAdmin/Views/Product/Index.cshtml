﻿

@model List<Product>

<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
        
        <div class="card-body">
            
            <h4 class="card-title">Products</h4>
           <div class=" "><a asp-controller="product" asp-action="create" class="btn btn-success">Create Products</a></div>
            <div class="table-responsive">
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in Model)
                        {
                           
                            <tr>

                                <td>
                                   <img style="width:250px;height:200px" src="~/assets/img/team/@item.ImageUrl"/>
                                </td>
                                    

                                <td>
                                   @item.Name
                                </td>
                                @item.Category.Name
                                  
                                <td>
                                    <a asp-action="update" asp-controller="product" asp-route-id="@item.Id" class="btn btn-warning "><i class="mdi mdi-pencil-box"></i></a>

                                    <a asp-action="delete" asp-controller="product" asp-route-id="@item.Id" class="btn btn-danger "><i class="mdi mdi-delete"></i></a>

                                    <a class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>