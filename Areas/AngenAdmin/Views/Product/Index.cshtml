@using WebApplication8.Models
@model List<Product>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <a asp-controller="product" asp-action="create" class="btn btn-success">Create Product</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model)
                        {
                            count++;
                            <tr>
                                <td class="py-1">
                                    @count
                                </td>
                                <td>
                                    <img style="width:150px;height:200px" src="~/assets/img/team/@product.Image" />
                                </td>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    @product.Category.Name
                                </td>
                                <td>
                                    <a asp-conroller="product" asp-action="update" class="btn btn-warning" asp-route-id="@product.Id"><i class="mdi mdi-open-in-new"></i></a>
                                    <a asp-conroller="product" asp-action="delete" class="btn btn-danger" asp-route-id="@product.Id"><i class="mdi mdi-delete-variant"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>